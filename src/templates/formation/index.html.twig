{% extends 'base.html.twig' %}

{% block title %}Liste des formations{% endblock %}

{% block body %}

    <h2>Filtres:</h2>
    <nav>
        {#  {{ form(formationFormulaire) }} #}
        <p>Formulaire</p>
    </nav>
    {# on n'affiche cette parite que si la liste est défini est pas vide #}
    {% if liste_formations is defined and liste_formations is not empty %}
        <h2>Résultats:</h2>
        <table class="table table-hover table-striped">
            <tr>
                <th>Nom</th>
                <th>Cursus</th>
            </tr>
            {% for formation in liste_formations %}
                <tr>
                    <td>{{ formation.nom }}</td>
                    <td>{{ formation.cursus.nom }}</td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <h2>Aucun résultat !</h2>
    {% endif %}


{% endblock %}
