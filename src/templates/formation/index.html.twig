{% extends 'base.html.twig' %}

{% block title %}Liste des formations{% endblock %}

{% block body %}

    <h2>Filtres:</h2>
    <nav>
        {{ form(formationFormulaire) }}
    </nav>
    {# on n'affiche cette parite que si la liste est défini est pas vide #}
    {% if liste_formations is defined and liste_formations is not empty %}
        <div class="d-flex flex-row mb-3 align-items-center">
            <h2>Résultats:</h2>
            <a class="btn btn-primary ms-5" href="{{ path('formation_add') }}" role="button"><i class="fa-solid fa-plus"></i> Formation</a>
        </div>
        <table class="table table-hover table-striped">
            <tr>
                <th>Nom</th>
                <th>Cursus</th>
            </tr>
            {% for formation in liste_formations %}
                <tr>
                    <td>{{ formation.nom }}</td>
                    <td>{{ formation.cursus.nom }}</td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <div class="d-flex flex-row mb-3 align-items-center">
            <h2>Aucun résultat !</h2>
            <a class="btn btn-primary ms-5" href="{{ path('formation_add') }}" role="button"><i class="fa-solid fa-plus"></i> Formation</a>
        </div>
    {% endif %}


{% endblock %}
