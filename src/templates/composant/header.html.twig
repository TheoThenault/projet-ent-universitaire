<header class="site-header sticky-top p-3">
    {% set route_name = app.request.attributes.get('_route') %}
    <div class="container">
        <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a class="navbar-brand" href="#">
                <img src="{{ asset('images/logo_univ_poitiers.png') }}" alt="logo univ poitiers" height="40">
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <!--
                <li><a href="#" class="nav-link px-2">Home</a></li>
                -->
                {% if is_granted('ROLE_ETUDIANT') or is_granted('ROLE_ENSEIGNANT_RES') or is_granted('ROLE_ENSEIGNANT') %}
                    <li>
                        <a href="{{ path('cour_index') }}"
                        {% if route_name == "cour_index" %} class="nav-link active px-2" {% else %} class="nav-link px-2" {% endif %}>
                            Cours
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ENSEIGNANT_RES') %}
                    <li>
                        <a href="{{ path('cour_add') }}"
                                {% if route_name == "cour_add" %} class="nav-link active px-2" {% else %} class="nav-link px-2" {% endif %}>
                            Ajouter un Cour
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ENSEIGNANT') %}
                    <li>
                        <a href="{{ path('heuresProf_index') }}"
                        {% if route_name == "heuresProf_index" %} class="nav-link active px-2" {% else %} class="nav-link px-2" {% endif %}>
                            Heures
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ETUDIANT') %}
                    <li>
                        <a href="{{ path('ueValide_index') }}"
                        {% if route_name == "ueValide_index" %} class="nav-link active px-2" {% else %} class="nav-link px-2" {% endif %}>
                            Ues Validés
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_SCOLARITE') %}
                    <li>
                        <a href="{{ path('ue_index') }}"
                        {% if route_name == "ue_index" %} class="nav-link active px-2" {% else %} class="nav-link px-2" {% endif %}>
                            Ue
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('salle_index') }}"
                        {% if route_name == "salle_index" %} class="nav-link active px-2" {% else %} class="nav-link px-2" {% endif %}>
                            Salles
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_SCOLARITE') %}
                    <li>
                        <a href="{{ path('cursus_index') }}"
                        {% if route_name == "cursus_index" %} class="nav-link active px-2" {% else %} class="nav-link px-2" {% endif %}>
                            Cursus
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_SCOLARITE') %}
                    <li>
                        <a href="{{ path('formation_index') }}"
                        {% if route_name == "formation_index" %} class="nav-link active px-2" {% else %} class="nav-link px-2" {% endif %}>
                            Formations
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_RH') %}
                    <li>
                        <a href="{{ path('enseignant_list') }}"
                        {% if route_name == "enseignant_list" %} class="nav-link active px-2" {% else %} class="nav-link px-2" {% endif %}>
                            Enseignants
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_SCOLARITE') %}
                    <li>
                        <a href="{{ path('etudiant_index') }}"
                        {% if route_name == "etudiant_index" %} class="nav-link active px-2" {% else %} class="nav-link px-2" {% endif %}>
                            Etudiants
                        </a>
                    </li>
                {% endif %}
            </ul>

            <div class="text-end">
                {% if app.user %}
                    <a class="btn btn-danger" href="{{ path('app_logout') }}" role="button">Déconnexion</a>
                {% else %}
                    <a class="btn btn-outline-light me-2" href="{{ path('app_login') }}" role="button">Connexion</a>
                {% endif %}
            </div>
        </nav>
    </div>
</header>