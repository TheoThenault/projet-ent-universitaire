{% extends 'base.html.twig' %}

{% block title %}Liste des étudiants{% endblock %}

{% block body %}
    <h2>Filtres:</h2>
    <nav>
        {{ form(formationFormulaire) }}
    </nav>
    {# on n'affiche cette parite que si la liste est défini est pas vide #}
    {% if liste_etudiants is defined and liste_etudiants is not empty %}
        <div class="d-flex flex-row mb-3 align-items-center">
            <h2>Résultats:</h2>
            <a class="btn btn-primary ms-5" href="{{ path('etudiant_add') }}" role="button"><i class="fa-solid fa-plus"></i> Étudiant</a>
        </div>
        <table class="table table-hover table-striped">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Cursus</th>
                <th>Formation</th>
{#                  <th></th>#}
            </tr>
            {% for etudiant in liste_etudiants %}
                <tr>
                    <td>{{ etudiant.personne.nom }}</td>
                    <td>{{ etudiant.personne.prenom }}</td>
                    <td>{{ etudiant.formation.cursus.nom }}</td>
                    <td>{{ etudiant.formation.nom }}</td>
{#                    <td>#}
{#                        <a class="btn btn-primary" href="{{ path('etudiant_add') }}" role="button"><i class="fa-solid fa-pen-to-square"></i></a>#}
{#                        <a class="btn btn-primary ms-2" href="{{ path('etudiant_add') }}" role="button"><i class="fa-solid fa-trash"></i></a>#}
{#                    </td>#}
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <div class="d-flex flex-row mb-3 align-items-center">
            <h2>Aucun résultat !</h2>
            <a class="btn btn-primary ms-5" href="{{ path('etudiant_add') }}" role="button"><i class="fa-solid fa-plus"></i> Étudiant</a>
        </div>
    {% endif %}
{% endblock %}
