{% extends 'base.html.twig' %}

{% block title %}Liste des étudiants{% endblock %}

{% block body %}
    <h2>Filtres:</h2>
    <nav>
        {{ form(formationFormulaire) }}
    </nav>
    {# on n'affiche cette parite que si la liste est défini est pas vide #}
    {% if liste_etudiants is defined and liste_etudiants is not empty %}
        <h2>Résultats:</h2>
        <table class="table table-hover table-striped">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Cursus</th>
                <th>Formation</th>
            </tr>
            {% for etudiant in liste_etudiants %}
                <tr>
                    <td>{{ etudiant.personne.nom }}</td>
                    <td>{{ etudiant.personne.prenom }}</td>
                    <td>{{ etudiant.formation.cursus.nom }}</td>
                    <td>{{ etudiant.formation.nom }}</td>

                </tr>
            {% endfor %}
        </table>
    {% else %}
        <h2>Aucun résultat !</h2>
    {% endif %}
{% endblock %}
