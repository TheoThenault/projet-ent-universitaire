{% extends 'base.html.twig' %}

{% block title %}Liste enseignants!{% endblock %}

{% block body %}

    <h2>Recherche d'enseignant:</h2>

    {{ form_start(profForm) }}
    {{ form_errors(profForm) }}

    {{ form_row(profForm.Entry) }}
    {{ form_row(profForm.send) }}

    {% if list is not defined or list is empty%}
        <div class="d-flex flex-row mb-3 align-items-center">
            <h3>Aucun r√©sultat!</h3>
            {% if is_granted('ROLE_RH') %}
                <a class="btn btn-primary ms-5" href="{{ path('enseignant_add') }}" role="button"><i class="fa-solid fa-plus"></i> Enseignants</a>
            {% endif%}
        </div>
    {% else %}
        <div class="d-flex flex-row mb-3 align-items-center">
            <h3>Enseignants: </h3>
            {% if is_granted('ROLE_RH') %}
                <a class="btn btn-primary ms-5" href="{{ path('enseignant_add') }}" role="button"><i class="fa-solid fa-plus"></i> Enseignants</a>
            {% endif%}
        </div>
        <table class="table table-hover table-striped">
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Status</th>
            </tr>
            {% for prof in list %}
                <tr>
                    <td>{{ prof.personne.nom }}</td>
                    <td>{{ prof.personne.prenom }}</td>
                    <td>{{ prof.personne.email }}</td>
                    <td>{{ prof.StatutEnseignant.nom }}</td>
                </tr>
            {% endfor %}
        </table>
        <style>
            div.pagination {
                width:100%;
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                margin-bottom: 20px;
            }

            div.pagination > a, button {
                text-align: center;
                margin: 0 5px;
                padding: 4px 12px;
                border: 1px solid white;
                border-radius: 50%;
                font-size: 20px;
                /* rgb(220, 53, 69) */
            }

            div.pagination > a#clicker {
                background-color: rgb(220, 53, 69);
                color: white;
            }

            div.pagination > button {
                background-color: WHITE;
                color: BLACK;
                transition: 200ms linear;
            }
            div.pagination > button:hover {
                background-color: rgb(223, 157, 164);
                color: BLACK;
            }


        </style>
        <div class="pagination">
        {% if pageMax > 1 %}
            {% for page in 1..pageMax %}
                {% if page != currPage %}
                    <button type="submit" name="submit{{ page }}" formaction="{{ path('enseignant_list', {'nPage': page}) }}">{{ page }}</button>
                {% else %}
                    <a id="clicker">{{ page }}</a>
                {% endif %}
            {% endfor %}
        {% endif %}
        </div>
    {% endif %}

    {{ form_end(profForm) }}

{% endblock %}