{% extends 'base.html.twig' %}

{% block title %}Liste Ues validés{% endblock %}

{% block body %}
    {% if pasEtudiant is defined %}
        <h2>Vous n'êtes pas un étudiant!!</h2>
    {% else %}

        {% if list_ues is empty %}
            <h2>Aucun UE validé :(</h2>
        {% else %}
            <h2>Vos Ues validés:</h2>
            <table class="table table-hover table-striped">
                <tr>
                    <th>Nom</th>
                    <th>Volume horaire</th>
                    <th>Spécialité</th>
                    <th>Cursus</th>
                    <th>Formation</th>
                </tr>
                {% for ue in list_ues %}
                    <tr>
                        <td>{{ ue.nom }}</td>
                        <td>{{ ue.volumeHoraire }}</td>
                        <td>{{ ue.specialite.nom }}</td>
                        <td>{{ ue.formation.cursus.nom }}</td>
                        <td>{{ ue.formation.nom }}</td>
                    </tr>
                {% endfor %}
            </table>
        {% endif %}
    {% endif %}
{% endblock %}
